<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg2"
    android:backgroundTint="#D30BA1B5"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UpdateCourse">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update  Contact"
        android:textSize="25sp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"/>


    <!--Edit text to enter course name-->
    <EditText
        android:id="@+id/id_upd_name"
        android:layout_width="match_parent"
        android:background="@drawable/text_back"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:paddingLeft="20dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Name" />

    <!--edit text to enter course duration-->
    <EditText
        android:id="@+id/id_upd_email"
        android:layout_width="match_parent"
        android:paddingLeft="20dp"
        android:textColorHint="#fff"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:inputType="textEmailAddress"
        android:background="@drawable/text_back"
        android:layout_margin="10dp"
        android:hint="Email Id " />

    <!--edit text to display course tracks-->
    <EditText
        android:id="@+id/id_upd_password"
        android:layout_width="match_parent"
        android:textColor="#fff"
        android:background="@drawable/text_back"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:inputType="textPassword"
        android:textColorHint="#fff"
        android:paddingLeft="20dp"
        android:hint="Password " />

    <!--edit text for course description-->
    <EditText
        android:id="@+id/id_upd_mobile"
        android:layout_width="match_parent"
        android:background="@drawable/text_back"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:inputType="phone"
        android:textColorHint="#fff"
        android:layout_margin="10dp"
        android:textColor="#fff"
        android:hint="Mobile number" />

    <!--button for adding new course-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:orientation="horizontal"
        >
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/id_upd_btn"
            android:layout_width="160dp"
            android:backgroundTint="#06770B"
            android:layout_height="wrap_content"
            android:background="@drawable/text_back"
            android:layout_margin="10dp"
            android:textSize="16sp"
            android:textColor="#fff"
            android:text="Update"
            android:textAllCaps="false" />

        <!--new button for opening our course list activity-->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/id_dlt_btn"
            android:layout_width="160dp"
            android:textColor="#fff"
            android:backgroundTint="#E91E63"
            android:layout_height="wrap_content"
            android:background="@drawable/text_back"
            android:layout_margin="10dp"
            android:textSize="16sp"
            android:text="Delete Contact"
            android:textAllCaps="false" />
    </LinearLayout>

</LinearLayout>

